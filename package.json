{
  "name": "swhurl-website",
  "version": "1.1.0",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "test": "npm run lint && npm run test:unit && npm run test:e2e && npm run test:perf",
    "test:unit": "NODE_ENV=test jest",
    "test:e2e": "wdio",
    "test:perf": "lighthouse http://website:3000 --quiet --output=json html --config-path=./lighthouse.config.json --chrome-flags=\"--headless --no-sandbox --disable-gpu\" --output-path=./lighthouse && node ./lighthouse-report-parser.js",
    "lint": "eslint .",
    "precommit": "precise-commits --whitelist=\"./package-lock.json\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samclement/swhurl-website.git"
  },
  "dependencies": {
    "@babel/core": "7.1.6",
    "express": "4.16.4",
    "express-prom-bundle": "4.2.1",
    "ignore-loader": "0.1.2",
    "next": "7.0.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "styled-components": "4.1.2",
    "yarn": "1.12.3"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-styled-components": "1.9.2",
    "chai": "4.2.0",
    "chromedriver": "2.44.1",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.9.0",
    "eslint-config-standard": "12.0.0",
    "eslint-config-standard-react": "7.0.2",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-styled-components-config": "0.0.2",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "jest-styled-components": "6.3.1",
    "lighthouse": "4.0.0-alpha.2-3.2.1",
    "npm-run-all": "4.1.5",
    "precise-commits": "1.0.2",
    "prettier": "1.15.3",
    "raf": "3.4.1",
    "table": "5.1.1",
    "wdio-chromedriver-service": "0.1.3",
    "wdio-mocha-framework": "0.6.4",
    "wdio-spec-reporter": "0.1.5",
    "webdriverio": "4.14.1"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "./.next",
      "./node_modules/",
      "./test"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./test/coverage",
    "collectCoverageFrom": [
      "components/**/*.js",
      "pages/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "./coverage/",
      "./node_modules/",
      "./.next",
      "./pages/_document.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
